@using System.Data
@using ZoomLa.Common
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Layout = "~/Views/Shared/_empty.cshtml";
}
@section head{
<link href="~/App_Themes/Guest.css" rel="stylesheet" />
<script src="/JS/mvcpage.js"></script>
<title>关键字</title>
<style>
.container{margin-top:30px;box-shadow:rgba(0,0,0,0.0980392) 0px 2px 5px 0px, rgba(0,0,0,0.0784314) 0px 2px 10px 0px;}
.OspcList{margin-top:0px;}
.mask{position:absolute;width:100%;height:100%;background-color:rgba(0, 0, 0, 0.18);top:0;z-index:-1;}
</style>
}
@section content{
<div class="container">
    <ul class="nav nav-tabs">
        <li id="li_0"><a href="Keywords">全部</a></li>
        <li id="li_1"><a href="Keywords?pri=1">推荐</a></li>
        <li id="li_2"><a href="Keywords?pri=2">未推荐</a></li>
    </ul>
    @Html.Partial("Keywords_List",Model)
</div>
}
@section script{
<script>
    $(function () {
        var pri = '@DataConverter.CLng(Request["pri"])';
        $("#li_" + pri).addClass("active");
    })
</script>
}