@{
    Layout = "~/Areas/User/Views/Shared/_layout.cshtml";
}
@section head{
<title>学校浏览</title>
}
@section content{

<div id="pageflag" data-nav="edu" data-ban="ke"></div>
<div class="container margin_t5">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Default","")">用户中心</a></li>
        <li><a href="@Url.Action("ClassManage","Exam")">班级管理</a></li>
        <li class="active">学校浏览</li>
    </ol>
</div>
<div class="container btn_green">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td class="td_m text-right">学校名称:</td>
            <td>
                <label id="schoolname_l"> </label>
            </td>
        </tr>
        <tr>
            <td class="text-right">所属省市:</td>
            <td>
                <label id="schooladdress_l" ></label>
            </td>
        </tr>
        <tr>
            <td class="text-right">学校类型:</td>
            <td>
                <label id="SchoolType_L" ></label>
            </td>
        </tr>
        <tr>
            <td class="text-right">学校性质:</td>
            <td>
                <label id="schooldis_l" ></label>
            </td>
        </tr>
        <tr>
            <td class="text-right">学校微标:</td>
            <td>
                <lasp:Label id="schoolicon_l" ></lasp:Label>
            </td>
        </tr>
        <tr>
            <td class="text-right">学校信息:</td>
            <td>
                <label id="schoolinfo_l" ></label>
            </td>
        </tr>
    </table>
    <div class="text-center"><a href="@Url.Action("ClassManage","Exam")" class="btn btn-primary">返回列表</a></div>
</div>
}
@section script{

}
