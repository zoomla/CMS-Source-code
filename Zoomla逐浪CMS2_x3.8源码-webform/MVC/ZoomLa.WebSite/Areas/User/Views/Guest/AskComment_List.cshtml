@using System.Data
@using ZoomLa.BLL.Helper
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    DataTable dt = new DataTable();
    Model.cols = 5;
    Model.url = "AskComment_Data";
}
<div class="us_seta">
    <table class="table table-striped table-bordered table-hover" id="EGV">
        <tr>
            <td></td>
            <td>问题</td>
            <td>答案</td>
            <td>评论内容</td>
            <td>日期</td>

        </tr>
        @foreach (DataRow dr in dt.Rows)
        {
            <tr>
                <td><input type="checkbox" name="idchk" value="@dr["id"]" /></td>
                <td><a href="/Guest/Ask/SearchDetails?ID=@dr["askid"]" target="_blank">@dr["QContent"]</a></td>
                <td>@dr["AnswerContent"]</td>
                <td>@dr["Content"]</td>
                <td>@DateHelper.ToDate(dr["AddTime"],"yyyy年MM月dd日 HH:mm")</td>
            </tr>
        }
        @Html.Partial("_page",Model)
    </table>
</div>