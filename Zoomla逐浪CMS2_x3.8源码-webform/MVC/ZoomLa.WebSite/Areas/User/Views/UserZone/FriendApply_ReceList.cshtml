@using System.Data
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Model.cols = 5;
    Model.url = "FriendApplyRece_Data";
}
<div id="EGV">
    <table id="EGV" class="table table-striped table-bordered table-hover">
        @if (Model.itemCount > 0)
        {
            <tr><th>头像</th><th>用户名</th><th>昵称</th><th>备注</th><th class="td_l">操作</th></tr>
            foreach (DataRow dr in Model.dt.Rows)
            {
                <tr class="contr">
                    <td><img src="@dr["salt"]" onerror="shownoface(this);" class="img50" /></td>
                    <td>@dr["UserName"]</td>
                    <td>@dr["HoneyName"]</td>
                    <td>@dr["Remind"]</td>
                    <td>
                        <a href="javascript:;" title="同意申请" class="option_style" onclick='mvcpage.del({ id: "@dr["ID"]", url: "FriendApply_Agree" });' ><i class="fa fa-user-plus"></i>同意</a>
                        <a href="javascript:;" title="拒绝申请" class="option_style" onclick='mvcpage.del({ id: "@dr["ID"]", url: "FriendApply_Reject" });' ><i class="fa fa-recycle"></i>拒绝</a>
                    </td>
                </tr>
            }
            @Html.Partial("_page", Model)
        }
        else
        {
            <tr><td colspan="5">无待处理好友申请</td></tr>
        }
    </table>
</div>