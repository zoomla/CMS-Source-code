@using System.Data
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Model.cols = 4;
    Model.url = "FriendList_Data";
}
<div id="EGV">
    <table class="table table-striped table-bordered table-hover">
        @if (Model.itemCount > 0)
        {
            <tr><th>头像</th><th>用户名</th><th>昵称</th><th>操作</th></tr>
            foreach (DataRow dr in Model.dt.Rows)
            {
                <tr>
                    <td><img src="@dr["salt"]" onerror="shownoface(this);" class="img50" /></td>
                    <td>@dr["UserName"]</td>
                    <td>@dr["HoneyName"]</td>
                    <td>
                        <a href="javascript:;" title="删除好友" class="option_style" onclick='mvcpage.del({ id: "@dr["UserID"]", url: "Friend_Del",confirm: "确定删除吗?" });'><i class="fa fa-recycle"></i>删除</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4">暂无好友数据</td></tr>
        }
    </table>
</div>