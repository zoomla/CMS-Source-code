@{
    Layout = "~/Areas/User/Views/Shared/_layout.cshtml";
}
@section head{
    <title>信息回复</title>
}
@section content{
<form method="post" action="@Url.Action("Reply_Submit","Pub")">
    <div id="pageflag" data-nav="index" data-ban="pub"></div>
    <div class="container margin_t10">
        <ol class="breadcrumb">
            <li><a title="会员中心" href="@Url.Action("Default","")">会员中心</a></li>
            <li class="active">信息回复</li>
        </ol>
        <div class="btn_green">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <td colspan="2" class="text-center"><label id="label2">信息回复</label></td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        标题：
                    </td>
                    <td>
                        <input type="text" id="txttitle" name="txttitle" value="@ViewBag.title" class="form-control" style="width:400px;max-width:400px;" />
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right">
                        内容：
                    </td>
                    <td>
                        <textarea id="txtcontent" name="txtcontent" class="form-control" style="width:400px;max-width:400px;height:200px;"></textarea>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center" class="btn_green">
                        <button id="submit" class="btn btn-primary">提交</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
}
@section script{

}
