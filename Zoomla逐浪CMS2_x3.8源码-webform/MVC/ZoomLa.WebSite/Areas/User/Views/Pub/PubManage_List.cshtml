@using System.Data
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Model.cols = 3;
    Model.url = "PubManage";
}
<div id="EGV">
    <table class="table table-striped table-bordered table-hover">
        @if (Model.itemCount > 0)
        {
            <tr><th>ID</th><th>模块名称</th><th>操作</th></tr>
            foreach (DataRow dr in Model.dt.Rows)
            {
                <tr>
                    <td>@dr["Pubid"]</td>
                    <td>@dr["PubName"]</td>
                    <td>
                        <a href="PubManageSubmit?pid=@dr["Pubid"]">管理信息</a>
                    </td>
                </tr>
            }
            @Html.Partial("_page", Model)
        }
        else
        {
            <tr><td colspan="3">当前没有评论信息!!</td></tr>
        }
    </table>
</div>