@{
    Layout = "~/Areas/User/Views/Shared/_empty.cshtml";
}
@section head{
<style>.text-right{line-height:30px!important;}</style>
<title>赠送金额</title>
}
@section content{
<form method="post" action="@MVCHelper.GetAction("GiveMoney_Add",Request)">
    <table class="table table-striped table-bordered">
        <tr>
            <td class="td_m text-right">当前@(ViewBag.TypeName):</td>
            <td><label id="UserScore_L" style="color:green;line-height:30px;">@ViewBag.score</label></td>
        </tr>
        <tr>
            <td class="td_m text-right">受赠会员名:</td>
            <td><input type="text" id="UserName_T" name="UserName_T" class="form-control text_300" /><span style="color:green;">*会员名与ID只要填写一项即可</span></td>
        </tr>
        <tr>
            <td class="td_m text-right">受赠会员ID:</td>
            <td><input type="text" id="UserID_T" name="UserID_T" class="form-control text_300" /></td>
        </tr>
        <tr>
            <td class="text-right">赠送@(ViewBag.TypeName):</td>
            <td><input type="text" id="Score_T" name="Score_T" class="form-control text_300 num required" title="赠送金额不能为空" /></td>
        </tr>
        <tr>
            <td class="text-right">备注:</td>
            <td><textarea id="Remark_T" name="Remark_T" class="form-control text_300" style="height:100px;"></textarea></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" id="SendScore_Btn" class="btn btn-primary" value="赠送" />
                <button type="button" class="btn btn-primary" onclick="parent.CloseComDiag()">关闭</button>
            </td>
        </tr>
    </table>
</form>
}
@section script{
    <script>
        $(function () {
            ZL_Regex.B_Num(".num");
            $("form").validate();
        });
    </script>
}