@using System.Data
@using ZoomLa.Common
@using ZoomLa.BLL.Helper
@using ZoomLa.Model
@using ZoomLa.BLL
@using ZoomLa.Components
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Model.cols = 4;
    Model.Check=false;
    Model.url = "Pub";
}
<div id="EGV" class="margin_t10">
    @if (Model.itemCount < 1)
    {
        <div style="background-color:#f9f9f9;border:1px solid #ddd;padding:10px 15px;">没有符合条件的互动信息</div>
    }
    else
    {
        <table class="table table-striped table-border table-hover">
            <tr>
                <td class="td_s">ID</td>
                <td>标题</td>
                <td class="td_md">状态</td>
                <td class="td_l">操作</td>
            </tr>
            @foreach (DataRow dr in Model.dt.Rows)
            {
                <tr class="text-center">
                    <td>@dr["GeneralID"]</td>
                    <td class="text-left"><a href="ShowPubList?ID=@dr["GeneralID"]">@dr["Title"]</a></td>
                    <td>@ZoomLa.BLL.B_Content.GetStatusStr(Convert.ToInt32(dr["Status"]))</td>
                    <td>
                        <a href='ShowPubList?ID=@dr["GeneralID"]'>预览</a>
                        <a href="/Item/@(dr["GeneralID"])" target="_blank">访问</a>
                        <a href="EditContent?GeneralID=@dr["GeneralID"]">修改</a>
                    </td>
                </tr>
            }
            @Html.Partial("_page", Model)
        </table>
    }
</div>