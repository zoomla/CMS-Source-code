@model ZoomLa.SQLDAL.SQL.PageSetting
@using System.Data
@using ZoomLa.BLL.Helper
@{
    Model.cols = 2;
    Model.url = "MyAnswer_Data";
    DataTable dt = new DataTable();

}
<div class="container">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td style="width: 70%;">我的回答</td>
            <td style="width: 30%;">
                <select id="switch" onchange="switchChange(this)" class="form-control">
                    <option value="0">全部回答</option>
                    <option value="1">被采纳</option>
                    <option value="2">未采纳</option>
                    <option value="3">待解决</option>
                </select>
            </td>
        </tr>
        @foreach (DataRow dr in dt.Rows)
        {
            <tr>
                <td style="width: 70%; padding-left: 10px;">
                    <a href='/Guest/Ask/SearchDetails?ID=@dr["ID"]' target="_blank">@dr["Qcontent"]</a><br />
                    <label  id="count"></label>
                    个回答 |@DateHelper.ToDate(dr["AddTime"], "yyyy-MM-dd")
                </td>
                <td style="width: 30%; padding-left: 10px;">
                    <label id="lbstatus"></label>
                </td>
            </tr>
        }
        @Html.Partial("_page", Model)
    </table>
</div>
