@model ZoomLa.Model.Page.M_PageReg
@{
    Layout = "~/Areas/User/Views/Shared/_layout.cshtml";
}
@section head{
    <title>注册企业黄页</title>
}
@section content{
    <div id="pageflag" data-nav="page" data-ban="page"></div>
    <div class="container margin_t5">
        <ol class="breadcrumb">
            <li><a title="会员中心" href="@Url.Action("Default","")">会员中心</a></li>
            <li><a href="@Url.Action("Default","Pages")">企业黄页</a></li>
            <li class="active">配置黄页</li>
        </ol>
    </div>
    <div class="container">
        <div class="us_seta">
            <form method="post" action="@Url.Action("Modifyinfo_Edit","Pages")">
                <table class="table table-bordered table-hover table-striped">
                    <tr><td colspan="2" class="text-center">配置信息设置</td></tr>
                    <tr>
                        <td>黄页标题： </td>
                        <td>
                            @Html.TextBoxFor(Model => Model.PageTitle, new { @class = "form-control text_md" })
                        </td>
                    </tr>
                    <tr>
                        <td>菜单高度： </td>
                        <td>
                            @Html.TextBoxFor(Model => Model.NavHeight, new { @class = "form-control text_md" })px
                        </td>
                    </tr>
                    <tr>
                        <td>栏目背景图片： </td>
                        <td>
                            <table border='0' cellpadding='0' cellspacing='1' width='100%'>
                                <tr>
                                    <td>
                                        @Html.TextBoxFor(Model => Model.NavBackground, new { @class = "form-control text_md" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <iframe id="Iframe1" src="/Common/UserUpload.aspx?FieldName=NavBackground" marginheight="0" marginwidth="0" frameborder="0" width="100%" height="30" scrolling="no"></iframe>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>栏目背景颜色： </td>
                        <td>
                            @Html.TextBoxFor(Model => Model.NavColor, new { @class = "form-control text_md" })
                        </td>
                    </tr>
                    <tr>
                        <td>KeyWords关键字： </td>
                        <td>
                            @Html.TextAreaFor(Model => Model.Keyword, new { @class = "form-control text_md", @style = "height:40px;" })
                        </td>
                    </tr>
                    <tr>
                        <td>Description内容： </td>
                        <td>
                            @Html.TextAreaFor(Model => Model.Description, new { @class = "form-control text_md", @style = "height:40px;" })
                        </td>
                    </tr>
                    <tr>
                        <td>顶部HTML内容： </td>
                        <td>
                            @Html.TextAreaFor(Model => Model.TopWords, new { @class = "form-control", @style = "width:300px;height:80px;" })
                        </td>
                    </tr>
                    <tr>
                        <td>尾部HTML内容： </td>
                        <td>
                            @Html.TextAreaFor(Model => Model.BottonWords, new { @class = "form-control", @style = "width:300px;height:80px;" })
                        </td>
                    </tr>
                    <tr>
                        <td class="btn_green text-center" colspan="2">
                            <input type="submit" class="btn btn-primary" value="确认" />
                            <a href="@Url.Action("Default","Pages")" class="btn btn-primary">取消</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
}
@section script{

}
