@{
    M_UserInfo mu = new ZoomLa.BLL.B_User().GetLogin();
}
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
