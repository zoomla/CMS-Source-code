@using ZoomLa.Common
@using ZoomLa.BLL.Helper
@using ZoomLa.BLL
    @model ZoomLaCMS.Models.Field.VM_FieldModel
    @functions{
        private MvcHtmlString PreViewImg()
        {
            string value = Model.GetValue();
            string imgHtml = "";
            if (StrHelper.StrNullCheck(value)) { return MvcHtmlString.Create("") }
            string[] imgArr = value.Split("|".ToCharArray(), StringSplitOptions.RemoveEmptyEntries);
            foreach (string img in imgArr)
            {
                if (!SafeSC.IsImage(img)) { continue; }
                imgHtml += "<img src='" + Model.UploadDir + img + "' class='thumbnail_img' title='" + img + "'/>";//onerror=\"this.src='/Images/nopic.gif'\"
            }
            return MvcHtmlString.Create(imgHtml);
        }
    }
@PreViewImg()
