@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Layout = "~/Areas/User/Views/Shared/_layout.cshtml";
}
@section head{<title>班级管理</title>
}
@section content{

<div id="pageflag" data-nav="edu" data-ban="ke"></div>
<div class="container margin_t5">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Default","")">用户中心</a></li>
        <li class="active">班级管理 [<a href="@Url.Action("AddClass","Exam")">申请班级</a>]</li>
    </ol>
</div>
<div class="container btn_green">
    <ul class="nav nav-tabs"  id="StuClass_Div"  role="tablist">
        <li role="presentation" data-tab="-1"><a href="@Url.Action("ClassManage","Exam")">全部班级</a></li>
        <li role="presentation" data-tab="1"><a href="ClassManage?audit=1">已通过班级</a></li>
        <li role="presentation" data-tab="0"><a href="ClassManage?audit=0">未通过班级</a></li>
    </ul>
    @Html.Partial("ClassManage_List",Model)
    <input type="hidden" id="delclass_hid" />
    <button id="del_btn" class="btn btn-primary" style="display:none;" onclick="Button3_Click" >删除</button>
</div>
}
@section script{
<script type="text/javascript">
    $().ready(function () {
        $("#chkAll").click(function () {
            $("[name='Item']").each(function (i, v) {
                $(v)[0].checked = $("#chkAll")[0].checked;
            });
        });
    });
    function InitTab(id) {
        $("[data-tab]").removeClass('active');
        $("[data-tab='" + id + "']").addClass('active');
    }
    function DelByID(id) {
        $("#DelClass_Hid").val(id);
        $("#Del_Btn").click();
    }
</script>
}
