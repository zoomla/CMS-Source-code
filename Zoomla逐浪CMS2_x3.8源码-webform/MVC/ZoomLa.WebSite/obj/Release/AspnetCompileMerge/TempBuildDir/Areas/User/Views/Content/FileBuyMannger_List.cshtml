@using System.Data
@using ZoomLa.BLL.Helper
@model ZoomLa.SQLDAL.SQL.PageSetting
@{
    Model.cols = 7;
    Model.url = "FileBuyManage";
}
<table id="EGV" class="table table-striped table-bordered table-hover">
    <tr>
        <td>文章标题</td>
        <td>文件名</td>
        <td>用户名</td>
        <td>价格</td>
        <td>购买时间</td>
        <td>到期时间</td>
        <td>操作</td>
    </tr>
    @foreach (DataRow dr in Model.dt.Rows)
    {
        <tr>
            <td><a href="/Item/@dr["gid"]" target="_blank">@dr["Title"]</a></td>
            <td>@dr["FName"]</td>
            <td>@dr["UserName"]</td>
            <td>@dr["BuyPrice"]</td>
            <td>@DateHelper.ToDate(dr["CDate"]) </td>
            <td>@DateHelper.ToDate(dr["EndDate"])</td>
            <td><a target="_blank" href="/Common/Label/DownFile?ranstr=@dr["ranstr"]&Gid=@dr["Gid"]&Field=@dr["Fileid"]"><span class="fa fa-download"></span>下载</a></td>
            <td></td>
        </tr>
    }
    @Html.Partial("_page",Model)
</table>