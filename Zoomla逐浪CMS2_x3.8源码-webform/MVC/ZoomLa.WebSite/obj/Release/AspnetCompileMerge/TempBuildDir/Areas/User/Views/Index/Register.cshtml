function checkreg(chk) {
    reghelp.need.protocol = chk.checked;
    reghelp.canSubmit();
}
function ShowUserModelHtml(html) {
    $("#ModelFiled_table").html(html);
}
function showagr() {
    $("#agr_content").show();
    $(".border_right").hide();
}
function hideagr() {
    $("#agr_content").hide();
    $(".border_right").show();
}
//显示或关闭选填信息
function SwicthSelectFill() {
    $(".selectFill").toggle();
}
function hidenbtn() {
