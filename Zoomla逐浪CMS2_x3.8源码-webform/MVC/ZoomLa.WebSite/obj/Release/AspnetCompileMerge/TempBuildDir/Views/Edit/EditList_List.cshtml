@using System.Data
@using System
@using ZoomLa.Common
@model ZoomLa.SQLDAL.SQL.PageSetting
@{ 
    Model.cols = 5;
    Model.url = "Edit_Data";
}
<div id="EGV">
    <table class="table table-striped table-bordered table-hover">
        @if (Model.itemCount > 0)
        {
            <tr><th width="6%">ID</th><th>标题</th><th>文章类型</th><th>修改时间</th><td>操作</td></tr>
            foreach (DataRow dr in Model.dt.Rows)
            {
                <tr>
                    <td>@dr["ID"]</td>
                    <td><a href="Default?ID=@dr["ID"]&DocTitle=@dr["title"]&DocType=@dr["Type"]">@dr["title"]</a></td>
                    <td>@dr["Type"]</td>
                    <td>@DataConverter.CDate(dr["CreateTime"]).ToString("yyyy/MM/dd hh:MM:ss")</td>
                    <td>
                        <a href="Default?ID=@dr["ID"]&DocTitle=@dr["title"]&DocType=@dr["Type"]&uptp=Iser">修改</a> 
                        <a href="Submission.aspx?id=@dr["id"]">投稿</a>
                        <a href="javascript:;" >[删除]</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5">当前没有信息!!</td></tr>
        }
    </table>
</div>